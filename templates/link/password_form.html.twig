{% extends 'base.html.twig' %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center">
        <div class="absolute inset-0 bg-cover bg-center blur"
             style="background-image: url('https://picsum.photos/1920/1080');">
        </div>
        <div class="relative dark:bg-gray-700 bg-white p-8 shadow rounded">
            <h2 class="dark:text-white text-2xl font-bold mb-4">This file is password-protected</h2>
            <form method="post" action="{{ path('app_check_password', { 'token': token }) }}">
                <label for="password" class="block mb-2 dark:text-white">Enter Password</label>
                <input type="password" name="password" id="password"
                       class="border rounded px-3 py-2 w-full mb-4" required>
                <div class="flex justify-center text-center">
                    <a href="{{ path('app_root') }}"
                       class="dark:bg-gray-500 dark:hover:bg-gray-600 bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 mr-2 rounded-lg focus:outline-none">
                        Go Back
                    </a>
                    <button type="submit"
                            class="dark:bg-purple-600 dark:hover:bg-purple-700 bg-amber-600 hover:bg-amber-700 text-white font-bold px-4 py-2 rounded-lg">
                        Verify
                    </button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
